<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".view.activity.ShowCaBrActivity">
    <include layout="@layout/toolbar"/>
    <RelativeLayout
            android:background="@color/white"
            android:padding="8dp"
            android:id="@+id/fl_category"
            android:layout_width="match_parent"
            android:layout_height="60dp">


        <TextView
                android:textStyle="bold"
                android:id="@+id/edCategory"
                android:textSize="@dimen/_15_sp"
                android:text="Danh muc"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginLeft="@dimen/_5dp"
                android:textColor="@color/black"
                android:id="@+id/tvCategory"
                android:textSize="@dimen/_13sp"
                android:text="Ao"
                android:layout_below="@id/edCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <TextView
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
        />
    </RelativeLayout>

    <RelativeLayout
            android:background="@color/white"
            android:layout_marginTop="2dp"
            android:padding="8dp"
            android:id="@+id/fl_brand"
            android:layout_width="match_parent"
            android:layout_height="60dp">


        <TextView
                android:id="@+id/edBrand"
                android:textSize="@dimen/_15_sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Nhan hieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginLeft="@dimen/_5dp"
                android:textColor="@color/black"
                android:layout_below="@id/edBrand"
                android:id="@+id/tvBrand"
                android:textSize="@dimen/_13sp"
                android:text="Ao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <TextView
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
        />
    </RelativeLayout>

</LinearLayout>