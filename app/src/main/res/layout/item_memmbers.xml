<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/border_item"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">


    <LinearLayout
            android:id="@+id/bottom_wrapper"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:weightSum="3">

        <TextView
                android:id="@+id/tvAddUser"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0076a5"
                android:gravity="center"
                android:text="@string/add"
                android:textColor="#fff"/>

        <TextView
                android:id="@+id/tvEditUser"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#003c54"
                android:gravity="center"
                android:text="@string/edit"
                android:textColor="#ccc"/>

        <TextView
                android:id="@+id/tvDeleteUser"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#E61717"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="#fff"/>


    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="68dp">
        <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/iv_user"
                android:id="@+id/ivUser"
                android:layout_width="50dp"
                android:layout_height="60dp"/>
        <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ivUser"
                android:id="@+id/tvNameUser"
                android:text="Pham van truong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView

                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ivUser"
                android:layout_below="@id/tvNameUser"
                android:id="@+id/tvEmailUser"
                android:text="Pham van truong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</com.daimajia.swipe.SwipeLayout>