<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".view.activity.SearchProductActivity">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp">
        <ImageView android:layout_width="@dimen/_30dp"
                   android:layout_centerVertical="true"
                   android:src="@drawable/btn_back"
                   android:layout_height="wrap_content"/>
        <team.android.pv.qlshop.view.customView.ClearableEditText
                android:paddingLeft="@dimen/_10dp"
                android:textSize="@dimen/_13sp"
                android:hint="@string/search_product"
                android:layout_centerVertical="true"
                android:background="@color/edSearch"
                android:layout_marginLeft="30dp"
                android:id="@+id/edSearch"
                android:lines="1"
                android:layout_width="match_parent"
                android:imeOptions="actionSearch"
                android:layout_height="@dimen/_40dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rlSearch"
            android:background="@color/rl"
            android:padding="@dimen/_8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tvSearch"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/_5dp"
                android:padding="@dimen/_5dp"
                android:drawableRight="@drawable/iv_down"
                android:text="Tat ca san pham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvSelect"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="Chon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/_10dp"
            android:id="@+id/rv_product_sell_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>