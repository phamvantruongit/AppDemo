<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">


    <LinearLayout
            android:id="@+id/bottom_wrapper"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:weightSum="2">

        <TextView
                android:id="@+id/tvEdProduct"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0076a5"
                android:gravity="center"
                android:text="@string/edit"
                android:textColor="#fff"/>

        <TextView

                android:id="@+id/tvDeProduct"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#003c54"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="#fff"/>


    </LinearLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:padding="@dimen/_8dp"
                android:layout_height="105dp">
    <ImageView
            android:id="@+id/iv_product"
            android:scaleType="centerInside"
            android:src="@drawable/iv_user"
            android:layout_width="80dp"
            android:layout_height="100dp"/>
    <TextView
            android:textSize="@dimen/_13sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="@dimen/_8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Ao so mi dep"
            android:layout_toRightOf="@id/iv_product"
            android:id="@+id/tvNameProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:textSize="@dimen/_13sp"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_below="@id/tvNameProduct"
            android:textColor="@color/black"
            android:text="Ma SP: 1"
            android:layout_toRightOf="@id/iv_product"
            android:id="@+id/tvIDProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:textSize="@dimen/_13sp"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_below="@id/tvIDProduct"
            android:textColor="@color/black"
            android:text="Gia ban 100.0000"
            android:layout_toRightOf="@id/iv_product"
            android:id="@+id/tvPrice_In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:textSize="@dimen/_13sp"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_below="@id/tvPrice_In"
            android:textColor="@color/black"
            android:text="So luong:10"
            android:layout_toRightOf="@id/iv_product"
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:textSize="@dimen/_13sp"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_below="@id/tvAmount"
            android:textColor="@color/black"
            android:text="Danh muc: Quan ao"
            android:layout_toRightOf="@id/iv_product"
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>
</com.daimajia.swipe.SwipeLayout>