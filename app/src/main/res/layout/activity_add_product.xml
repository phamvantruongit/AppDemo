<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".view.activity.AddProductActivity">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <include
            android:id="@+id/toolbars"
            layout="@layout/toolbar"/>

    <android.support.design.widget.TextInputLayout
            android:layout_margin="@dimen/_10dp"
            android:layout_below="@id/toolbars"
            android:id="@+id/inputNameProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
                android:hint="Ten san pham"
                android:background="@drawable/border_edit"
                android:maxLines="1"
                android:textSize="@dimen/_15_sp"
                android:padding="@dimen/_8dp"
                android:id="@+id/edNameProduct"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_margin="@dimen/_10dp"
                android:layout_below="@id/inputNameProduct"
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <FrameLayout
                    android:id="@+id/fl_barcode"
                    android:layout_width="match_parent"
                         android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                    android:enabled="false"
                    android:inputType="numberDecimal"
                    android:hint="Ma barcode"
                    android:background="@drawable/border_edit"
                    android:id="@+id/edBarcode"
                    android:maxLines="1"
                    android:textSize="@dimen/_15_sp"
                    android:padding="@dimen/_8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
            </android.support.design.widget.TextInputEditText>

        <ImageView
                android:id="@+id/imgBarcodes"
                android:layout_marginRight="20dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/barcode"
        />
            </FrameLayout>
        </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
            android:layout_margin="@dimen/_10dp"
            android:layout_below="@id/rl"
            android:id="@+id/inputDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
                android:hint="Mo ta"
                android:background="@drawable/border_edit"
                android:maxLines="2"
                android:textSize="@dimen/_15_sp"
                android:padding="@dimen/_8dp"
                android:id="@+id/edDesciptionProduct"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_margin="@dimen/_10dp"
            android:layout_below="@id/inputDescription"
            android:id="@+id/inputNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
                android:hint="Ghi chu"
                android:background="@drawable/border_edit"
                android:maxLines="2"
                android:textSize="@dimen/_15_sp"
                android:padding="@dimen/_8dp"
                android:id="@+id/edNote"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
            android:id="@+id/ln"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_10dp"
            android:layout_below="@id/inputNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                    android:hint="Gia ban le"
                    android:background="@drawable/border_edit"
                    android:id="@+id/edPrice_out"
                    android:maxLines="1"
                    android:inputType="numberDecimal"
                    android:layout_weight="1"
                    android:textSize="@dimen/_15_sp"
                    android:padding="@dimen/_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                    android:hint="Gia ban buon"
                    android:background="@drawable/border_edit"
                    android:id="@+id/edPrice_outs"
                    android:maxLines="1"
                    android:textSize="@dimen/_15_sp"
                    android:padding="@dimen/_10dp"
                    android:inputType="numberDecimal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ln_01"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_10dp"
            android:layout_below="@id/ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                    android:hint="Don vi"
                    android:background="@drawable/border_edit"
                    android:id="@+id/e01"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:textSize="@dimen/_15_sp"
                    android:padding="@dimen/_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                    android:hint="So luong"
                    android:background="@drawable/border_edit"
                    android:id="@+id/edAmount"
                    android:maxLines="1"
                    android:textSize="@dimen/_15_sp"
                    android:padding="@dimen/_10dp"
                    android:inputType="numberDecimal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <RelativeLayout
            android:layout_below="@id/ln_01"
            android:id="@+id/rlCategory"
            android:layout_margin="@dimen/_10dp"
            android:background="@drawable/boder_ed"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/imgCategory"
                android:src="@drawable/ic_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvTitle"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imgCategory"
                android:text="Phan loai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginTop="5dp"
                android:text="Danh muc,nhan hieu"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imgCategory"
                android:layout_below="@id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>
</android.support.v4.widget.NestedScrollView>