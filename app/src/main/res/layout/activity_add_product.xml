<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/white"
        tools:context=".view.activity.AddProductActivity">

    <android.support.design.widget.TextInputLayout
            android:background="@color/white"
            android:hint="Ten san pham"
            android:id="@+id/inputNameProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
                android:maxLines="1"
                android:textSize="@dimen/_15_sp"
                android:padding="@dimen/_8dp"
                android:id="@+id/edNameProduct"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_below="@id/inputNameProduct"
                android:id="@+id/rl"
                android:hint="Ma barcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                    android:id="@+id/edBarcode"
                    android:maxLines="1"
                    android:textSize="@dimen/_15_sp"
                    android:padding="@dimen/_8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
            </android.support.design.widget.TextInputEditText>

        <ImageView
                android:id="@+id/imgBarcode"
                android:layout_marginRight="20dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/barcode"
        />
            </FrameLayout>
        </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:hint="Mo ta"
            android:layout_below="@id/rl"
            android:id="@+id/inputDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
                android:maxLines="2"
                android:textSize="@dimen/_15_sp"
                android:padding="@dimen/_8dp"
                android:layout_marginTop="10dp"
                android:id="@+id/edDesciptionProduct"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
            android:id="@+id/tv"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_below="@id/inputDescription"
            android:text="Gia san pham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:background="@color/white"
            android:id="@+id/ln"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_below="@id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
                android:hint="Gia ban le"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                    android:id="@+id/edPrice_out"
                    android:maxLines="1"
                    android:inputType="numberDecimal"
                    android:layout_weight="1"
                    android:textSize="@dimen/_15_sp"
                    android:padding="@dimen/_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:hint="Gia ban buon"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                    android:id="@+id/edPrice_outs"
                    android:maxLines="1"
                    android:textSize="@dimen/_15_sp"
                    android:padding="@dimen/_8dp"
                    android:inputType="numberDecimal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/rlfeature"
            android:background="@drawable/boder_ed"
            android:padding="10dp"
            android:layout_below="@id/ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/img"
                android:src="@drawable/ic_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvfeature"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img"
                android:text="Kho hang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginTop="5dp"
                android:text="Don vi , khoi luong , ton kho"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img"
                android:layout_below="@id/tvfeature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rlCategory"
            android:layout_marginTop="10dp"
            android:background="@drawable/boder_ed"
            android:padding="10dp"
            android:layout_below="@id/rlfeature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/imgCategory"
                android:src="@drawable/ic_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvTitle"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imgCategory"
                android:text="Phan loai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginTop="5dp"
                android:text="Danh muc,nhan hieu"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imgCategory"
                android:layout_below="@id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_below="@id/rlCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button android:text="Them Moi"
                android:id="@+id/btnAddProduct"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <Button android:text="Huy"
                android:id="@+id/btnCancel"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>