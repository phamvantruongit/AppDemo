<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.RegisterActivity">
    <android.support.v7.widget.Toolbar
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:theme="@style/ToolbarTheme"/>
    <EditText
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/_150dp"
            android:id="@+id/ed_Email"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:hint="@string/email"
            android:padding="@dimen/_8dp"
            android:background="@drawable/boder_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:maxLines="1"
            android:layout_marginTop="@dimen/_15dp"
            app:layout_constraintTop_toBottomOf="@id/ed_Email"
            android:id="@+id/edNameShop"
            app:layout_constraintLeft_toLeftOf="parent"
            android:hint="@string/ten_cua_hang"
            android:padding="@dimen/_8dp"
            android:background="@drawable/boder_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:maxLines="1"
            android:layout_marginTop="@dimen/_15dp"
            android:id="@+id/edName"
            app:layout_constraintTop_toBottomOf="@id/edNameShop"
            app:layout_constraintLeft_toLeftOf="parent"
            android:hint="@string/ho_ten"
            android:padding="@dimen/_8dp"
            android:background="@drawable/boder_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:maxLines="1"
            android:maxLength="10"
            android:inputType="phone"
            android:layout_marginTop="@dimen/_15dp"
            android:id="@+id/edPhone"
            app:layout_constraintTop_toBottomOf="@id/edName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:hint="@string/so_dien_thoai"
            android:padding="@dimen/_8dp"
            android:background="@drawable/boder_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




        <team.android.pv.qlshop.view.customView.ClearableEditText
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginRight="@dimen/_20dp"
                android:maxLines="1"
                android:inputType="textPassword"
                android:layout_marginTop="@dimen/_15dp"
                android:id="@+id/ed_Pass"
                app:layout_constraintTop_toBottomOf="@id/edPhone"
                app:layout_constraintLeft_toLeftOf="parent"
                android:hint="@string/password"
                android:padding="@dimen/_8dp"
                android:background="@drawable/boder_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


    <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/ck_pass"
            android:text="Hien thi mat khau"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ed_Pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button

            android:layout_marginTop="@dimen/_30dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/ck_pass"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:textAllCaps="false"
            android:id="@+id/btnRegister"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/dang_ki"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"/>


</android.support.constraint.ConstraintLayout>