<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".view.activity.SearchProductActivity">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp">
        <ImageView android:layout_width="@dimen/_30dp"
                   android:layout_centerVertical="true"
                   android:src="@drawable/btn_back"
                   android:layout_height="wrap_content"/>
        <EditText
                android:paddingLeft="@dimen/_10dp"
                android:textSize="@dimen/_13sp"
                android:hint="@string/search_product"
                android:layout_centerVertical="true"
                android:background="@color/edSearch"
                android:layout_marginLeft="30dp"
                android:id="@+id/edSearchs"
                android:lines="1"
                android:maxLines="1"
                android:layout_marginRight="@dimen/_40dp"
                android:layout_width="match_parent"
                android:imeOptions="actionSearch"
                android:layout_height="@dimen/_40dp"/>
               />
        <ImageView android:layout_width="wrap_content"
                   android:layout_marginRight="@dimen/_5dp"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:id="@+id/iv_search_barcode"
                   android:src="@drawable/barcode"
                   android:layout_height="wrap_content"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/_10dp"
            android:id="@+id/rv_product_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>