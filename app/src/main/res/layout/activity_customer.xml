<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.CustomerActivity">
<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.CustomerActivity">
        <FrameLayout android:layout_width="match_parent"
                     android:id="@+id/fl"
                   app:layout_constraintTop_toTopOf="parent"
                   android:layout_height="150dp">
            <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center"
                    android:src="@drawable/iv_user"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>
        </FrameLayout>

    <TextView android:layout_width="match_parent"
              android:text="Tên cửa hàng"
              android:id="@+id/tvTen"
              app:layout_constraintTop_toBottomOf="@id/fl"
              android:layout_height="wrap_content"/>
    <EditText style="@style/view_wrap_content_edit"
              app:layout_constraintLeft_toLeftOf="parent"
              android:id="@+id/edNameShop"
              android:background="@null"
              android:text="Shop Khánh Xuân"
              app:layout_constraintTop_toBottomOf="@id/tvTen"
             />

    <View style="@style/view"/>

    <TextView android:layout_width="match_parent"
              android:layout_marginTop="@dimen/_10dp"
              android:id="@+id/tvName"
              android:text="Họ tên"
              app:layout_constraintTop_toBottomOf="@id/edNameShop"
              android:layout_height="wrap_content"/>
    <EditText style="@style/view_wrap_content_edit"
              app:layout_constraintLeft_toLeftOf="parent"
              android:id="@+id/edName"
              android:text="Phạm Văn Trường"
              app:layout_constraintTop_toBottomOf="@id/tvName"
             />

    <View style="@style/view"/>

    <TextView
            android:id="@+id/tvPhone"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintTop_toBottomOf="@id/edName"
            android:text="Số điện thoại"
            style="@style/view_wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText style="@style/view_wrap_content_edit"
              android:id="@+id/edPhone"
              android:text="0376249134"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toBottomOf="@id/tvPhone"
             />

    <View style="@style/view"/>

    <TextView
            android:text="Địa chỉ"
            android:id="@+id/tvAddress"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edPhone"
            style="@style/view_wrap_content"
    />

    <EditText
              style="@style/view_wrap_content_edit"
              android:id="@+id/edAddress"
              android:text="Giao thiện , Giao Thủy, Nam Định"
              app:layout_constraintTop_toBottomOf="@id/tvAddress"
              app:layout_constraintLeft_toLeftOf="parent"
             />

    <View style="@style/view"/>

    <TextView
            android:text="Tình trạng"
            android:id="@+id/tvStatus"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edAddress"
            style="@style/view_wrap_content"
    />

    <EditText
            android:id="@+id/edStatus"
            android:text="Shop đang trong quá trình dùng thử "
            app:layout_constraintTop_toBottomOf="@id/tvStatus"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/view_wrap_content_edit"/>

    <View style="@style/view"/>

    <TextView
            android:text="Ngày bắt đầu"
            android:id="@+id/tvDateStart"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edStatus"
            style="@style/view_wrap_content"
    />


    <EditText
            android:id="@+id/edDateStart"
            android:text="15/06/2019"
            app:layout_constraintTop_toBottomOf="@id/tvDateStart"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/view_wrap_content_edit"/>

    <View style="@style/view"/>


    <TextView
            android:text="Ngày kết thúc"
            android:id="@+id/tvDateStop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edDateStart"
            style="@style/view_wrap_content"
    />


    <EditText
            android:id="@+id/edDateStop"
            android:text="15/07/2019"
            app:layout_constraintTop_toBottomOf="@id/tvDateStop"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/view_wrap_content_edit"/>

    <View style="@style/view"/>

</LinearLayout>
</android.support.v4.widget.NestedScrollView>